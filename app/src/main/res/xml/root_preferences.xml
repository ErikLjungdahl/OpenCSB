<PreferenceScreen
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
            android:title="Automatic door opening (1-click)">

        <EditTextPreference
                android:id="@+id/doorID"
                android:dialogMessage="BlÃ¥elden:\nMain Entrance: 116234 \n\n\n(Is your door not in the list? You can find the DoorID by inspecting the element in a browser)"
                android:dialogTitle="Common DoorIDs"
                android:key="doorID"
                android:selectAllOnFocus="true"
                android:singleLine="true"
                android:summary="Long-press the app to access shortcut (can be dragged out as well)"
                android:title="Specify DoorID to create shortcut" />
        <Preference
                android:id="@+id/removeShortcuts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:key="removeShortcuts"
                app:title="Remove all shortcuts" />

    </PreferenceCategory>
    <PreferenceCategory
            android:title="Others">

        <Preference
                android:id="@+id/feedback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:key="feedback"
                app:summary="Report technical issues or suggest new features"
                app:title="Send feedback" />


    </PreferenceCategory>

</PreferenceScreen>